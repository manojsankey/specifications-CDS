    "details": {
      "en": {
        "id": "en",
        "purpose": "This CDS Application is one in a series of implementations adopting the Scotland new Gastrointestinal Pathways. The CDS Application provides alerts and recommendations when a Read code for one or more risk factor indicators for coeliac disease is detected in a patientâ€™s medical record in the local EHR. The CDS Application is based on information contained in the NICE guideline Coeliac disease: recognition and assessment (hereafter NICE NG20 Guideline) and the NICE pathways for Coeliac disease (hereafter NICE Coeliac Disease Pathways).",
        "keywords": [
          "Coeliac Disease",
          "CDS alert"
        ],
        "copyright": "Cambio"
      }
    },
    "other_details": {
      "references": "1.  (NICE guideline NG20). [cited 23 April 2018]. Available from URL: https://www.nice.org.uk/guidance/ng20."
    },
    "references": [
      {
        "id": "1",
        "label": "Coeliac disease: recognition, assessment and management. NICE guideline [NG20], September 2015.",
        "url": "https://www.nice.org.uk/guidance/ng20"
      }
    ]
  },
  "definition": {
    "data_bindings": {
      "gt0002": {
        "id": "gt0002",
        "model_id": "org.hl7.fhir.dstu3.model.Condition",
        "template_id": "FHIR-STU3-Condition.problem_diagnosis.v0",
        "type": "INPUT",
        "elements": {
